rule plot_neutral_path_length_over_ph_frequency_and_dist:
    input:
        lengths=expand("ranking{rank}/analysis/neutral_paths.txt", rank=config["rankings"]),
        frequencies=expand("ranking{rank}/phenotype_distribution.txt", rank=config["rankings"]),
        ref_lengths="ref_neutral_paths.txt",
        ref_frequencies="ref_phenotype_distribution.txt",
        distribution=expand("ranking{rank}/analysis/neutral_path_length_dist.txt", rank=config["rankings"]),
        ref_distribution="ref_neutral_path_length_dist.txt"
    output:
        "analysis/neutral_path_length_over_freq_and_dist.png"
    shell:
        "plot_neutral_path_length_over_phenotype_freq_and_dist.py "
        "-i {input.lengths} "
        "-f {input.frequencies} "
        "-r {input.ref_lengths} "
        "-k {input.ref_frequencies} "
        "-d {input.distribution} "
        "-l {input.ref_distribution} "
        "-o {output} "

rule plot_neutral_path_length_over_ph_frequency_and_dist_single_ref:
    input:
        lengths="ranking{rank}/analysis/neutral_paths.txt",
        frequencies="ranking{rank}/phenotype_distribution.txt",
        ref_lengths="ref_neutral_paths.txt",
        ref_frequencies="ref_phenotype_distribution.txt",
        distribution="ranking{rank}/analysis/neutral_path_length_dist.txt",
        ref_distribution="ref_neutral_path_length_dist.txt"
    output:
        "ranking{rank}/analysis/neutral_path_length_over_freq_and_dist.png"
    shell:
        "plot_neutral_path_length_over_phenotype_freq_and_dist.py "
        "-i {input.lengths} "
        "-f {input.frequencies} "
        "-r {input.ref_lengths} "
        "-k {input.ref_frequencies} "
        "-d {input.distribution} "
        "-l {input.ref_distribution} "
        "-o {output} "

rule compute_robustness:
    input:
        gp_map="{rank}/gp_map.pickle",
    output:
        "{rank}/phenotype_robustness.txt"
    shell:
        "compute_robustness.py "
        "-f {input.gp_map} "
        "-o {output}"

rule compute_robustness_ref:
    input:
        gp_map="ref_gp_map.pickle"
    output:
        "ref_phenotype_robustness.txt"
    shell:
        "compute_robustness.py "
        "-f {input.gp_map} "
        "-o {output}"

rule plot_robustness_over_freq_all:
    input:
        ph_distr=["ref_phenotype_distribution.txt"] + expand("ranking{rank}/phenotype_distribution.txt", rank=config["rankings"]),
        ph_rob=["ref_phenotype_robustness.txt"] + expand("ranking{rank}/phenotype_robustness.txt", rank=config["rankings"])
    output:
        "analysis/phenotype_robustness_freq_all.pdf"
    params:
        rank_label=["ViennaRNA"] + config["rankings"]
    shell:
        "plot_robustness_phenotype_freq_w_ref.py "
        "-d {input.ph_distr} "
        "-r {input.ph_rob} "
        "-l {params.rank_label} "
        "-e True " 
        "-o {output} "
